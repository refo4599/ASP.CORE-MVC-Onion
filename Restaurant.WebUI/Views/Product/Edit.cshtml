@model Restaurant.Application.ViewModels.ProductVM

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4" style="max-width:600px;">
    <h2 class="text-center mb-4">Edit Product</h2>

    <form asp-action="Edit" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control form-control-sm" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control form-control-sm" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control form-control-sm" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="InStock" class="form-label"></label>
            <input asp-for="InStock" class="form-control form-control-sm" />
            <span asp-validation-for="InStock" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control form-control-sm"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select form-select-sm"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Current Image</label><br />
            @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
            {
                <img src="@Model.ExistingImageUrl" alt="Product Image" class="img-thumbnail" width="150" />
            }
            else
            {
                <p>No image uploaded</p>
            }
        </div>

        <div class="mb-3">
            <label asp-for="Image" class="form-label">Change Image</label>
            <input asp-for="Image" type="file" class="form-control form-control-sm" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-sm">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
