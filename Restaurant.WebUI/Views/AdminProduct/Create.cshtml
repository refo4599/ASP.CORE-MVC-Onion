@model Restaurant.Application.ViewModels.ProductVM
@{
    ViewData["Title"] = "Add Product";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
       
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Poppins', sans-serif;
            color: #fff;
            background: linear-gradient(120deg, #4b6cb7, #182848);
            animation: colorShift 10s ease-in-out infinite;
            overflow-y: auto;
        }

        @@keyframes colorShift {
            0% {
                background: linear-gradient(120deg, #4b6cb7, #182848);
            }

            25% {
                background: linear-gradient(120deg, #355c7d, #6c5b7b);
            }

            50% {
                background: linear-gradient(120deg, #283e51, #485563);
            }

            75% {
                background: linear-gradient(120deg, #2c3e50, #4ca1af);
            }

            100% {
                background: linear-gradient(120deg, #4b6cb7, #182848);
            }
        }

        .page-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .product-card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            padding: 35px 40px;
            width: 100%;
            max-width: 550px;
            backdrop-filter: blur(10px);
        }

            .product-card h4 {
                color: #fff;
                font-weight: 700;
                margin-bottom: 25px;
                text-align: center;
                letter-spacing: 0.5px;
            }

        label.form-label {
            color: #fff;
            font-weight: 600;
        }

        .form-control,
        .form-select {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: #fff;
            border-radius: 8px;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

            .form-control:focus,
            .form-select:focus {
                box-shadow: 0 0 0 2px rgba(72, 187, 120, 0.7);
                background: rgba(255, 255, 255, 0.25);
            }

        select.form-select option {
            background-color: #2b2b2b;
            color: #fff;
        }

        .btn {
            border: none;
            border-radius: 10px;
            padding: 10px 18px;
            font-size: 0.95rem;
            font-weight: 600;
            transition: all 0.3s ease-in-out;
        }

        .btn-success {
            background: linear-gradient(90deg, #48bb78, #38a169);
            color: #fff;
            box-shadow: 0 4px 10px rgba(72, 187, 120, 0.4);
        }

            .btn-success:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(72, 187, 120, 0.6);
            }

        .btn-outline-secondary {
            background: rgba(255, 255, 255, 0.25);
            color: #fff;
            text-decoration: none;
        }

            .btn-outline-secondary:hover {
                background: rgba(255, 255, 255, 0.35);
                transform: translateY(-2px);
            }

        .text-danger {
            font-size: 0.85rem;
            color: #ffb3b3 !important;
        }

        .d-flex {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
</head>

<body>
    <div class="page-wrapper">
        <div class="product-card">
            <h4>➕ Add New Product</h4>

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Product Name</label>
                    <input asp-for="Name" class="form-control form-control-sm" placeholder="Enter product name..." />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control form-control-sm" placeholder="Enter price..." />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">Quantity</label>
                    <input asp-for="Quantity" type="number" min="0" class="form-control form-control-sm" placeholder="Enter quantity..." />
                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="InStock" class="form-label">In Stock</label>
                    <input asp-for="InStock" type="number" min="0" class="form-control form-control-sm" placeholder="Enter stock count..." />
                    <span asp-validation-for="InStock" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">Category</label>
                    <select asp-for="CategoryId" class="form-select form-select-sm" asp-items="Model.Categories">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control form-control-sm" rows="3" placeholder="Enter description..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Image" class="form-label">Image</label>
                    <input asp-for="Image" type="file" class="form-control form-control-sm" />
                    <span asp-validation-for="Image" class="text-danger small"></span>
                </div>

                <div class="d-flex">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back</a>
                    <button type="submit" class="btn btn-success btn-sm px-4">Save</button>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
