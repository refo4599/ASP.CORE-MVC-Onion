@model Restaurant.Models.Category
@{
    Layout = null;
}

<style>
    
    body {
        margin: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Cairo', sans-serif;
        background: linear-gradient(120deg, #4b6cb7, #182848);
        animation: colorShift 10s ease-in-out infinite;
        background-size: 400% 400%;
    }

    @@keyframes colorShift {
        0% {
            background: linear-gradient(120deg, #4b6cb7, #182848);
        }

        25% {
            background: linear-gradient(120deg, #355c7d, #6c5b7b);
        }

        50% {
            background: linear-gradient(120deg, #283e51, #485563);
        }

        75% {
            background: linear-gradient(120deg, #2c3e50, #4ca1af);
        }

        100% {
            background: linear-gradient(120deg, #4b6cb7, #182848);
        }
    }

    .category-card {
        width: 100%;
        max-width: 450px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(18px);
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
        padding: 40px;
        animation: fadeIn 0.6s ease-in-out;
        color: #fff;
        position: relative;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .category-card h3 {
        text-align: center;
        color: #fff;
        font-weight: 800;
        margin-bottom: 30px;
        letter-spacing: 1px;
        font-size: 1.6rem;
    }

   
    .form-group {
        position: relative;
        margin-bottom: 25px;
    }

        .form-group input,
        .form-group textarea {
            width: 100%;
            background: rgba(255, 255, 255, 0.15);
            border: none;
            border-bottom: 2px solid rgba(255, 255, 255, 0.3);
            color: #fff;
            font-size: 0.95rem;
            padding: 12px 10px 10px 35px;
            border-radius: 8px;
            outline: none;
            transition: 0.3s;
        }

            .form-group input:focus,
            .form-group textarea:focus {
                border-bottom-color: #48bb78;
                background: rgba(255, 255, 255, 0.25);
            }

        .form-group label {
            position: absolute;
            top: 12px;
            left: 35px;
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.7);
            pointer-events: none;
            transition: 0.3s;
        }

        .form-group input:focus + label,
        .form-group input:not(:placeholder-shown) + label,
        .form-group textarea:focus + label,
        .form-group textarea:not(:placeholder-shown) + label {
            top: -10px;
            left: 25px;
            font-size: 0.75rem;
            color: #48bb78;
        }

       
        .form-group i {
            position: absolute;
            left: 10px;
            top: 13px;
            color: rgba(255, 255, 255, 0.6);
            font-size: 1.1rem;
            transition: 0.3s;
        }

        .form-group input:focus ~ i,
        .form-group textarea:focus ~ i {
            color: #48bb78;
        }

  
    .btn {
        border: none;
        border-radius: 10px;
        padding: 10px 18px;
        font-size: 0.95rem;
        font-weight: 600;
        transition: all 0.3s ease-in-out;
    }

    .btn-primary {
        background: linear-gradient(90deg, #48bb78, #38a169);
        color: #fff;
        box-shadow: 0 4px 10px rgba(72, 187, 120, 0.4);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(72, 187, 120, 0.6);
        }

    .btn-secondary {
        background: rgba(255, 255, 255, 0.25);
        color: #fff;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.35);
            transform: translateY(-2px);
        }

    .text-danger {
        font-size: 0.85rem;
        color: #ffb3b3 !important;
    }


    .form-buttons {
        display: flex;
        justify-content: space-between;
        width: 100%;
        margin-top: 25px;
    }
</style>

<div class="category-card">
    <h3><i class="bi bi-folder-plus me-2"></i> Add a new category</h3>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger small mb-2"></div>

        <!-- Name -->
        <div class="form-group">
            <input asp-for="Name" placeholder=" " />
            <label asp-for="Name">Category name</label>
            <i class="bi bi-tag"></i>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="form-group">
            <textarea asp-for="Description" rows="3" placeholder=" "></textarea>
            <label asp-for="Description">Description</label>
            <i class="bi bi-card-text"></i>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

       
        <div class="form-buttons">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save
            </button>
        </div>
    </form>
</div>

<!-- Validation Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
