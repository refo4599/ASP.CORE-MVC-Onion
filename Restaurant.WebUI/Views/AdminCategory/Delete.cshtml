@model Restaurant.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-danger text-white text-center fw-bold">
            <i class="bi bi-exclamation-triangle"></i> Delete Category
        </div>

        <div class="card-body text-center">
            <h5 class="mb-4">Are you sure you want to delete this category?</h5>

            <div class="border rounded-3 p-3 mb-4 bg-light">
                <p><strong>ID:</strong> @Model.Id</p>
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Description:</strong> @(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</p>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm me-2">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger btn-sm px-4">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
