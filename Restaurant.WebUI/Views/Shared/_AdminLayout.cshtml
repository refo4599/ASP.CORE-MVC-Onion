@using Microsoft.AspNetCore.Identity
@inject SignInManager<Restaurant.Models.AppUser> SignInManager
@inject UserManager<Restaurant.Models.AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: #fff;
            background: linear-gradient(270deg, #1e3c72, #2a5298, #4b6cb7, #182848);
            background-size: 800% 800%;
            animation: gradientMove 12s ease infinite;
            transition: margin-left 0.3s;
        }

        @@keyframes gradientMove {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        /* Sidebar */
        .sidebar {
            width: 220px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: rgba(0,0,0,0.8);
            padding-top: 60px;
            transform: translateX(-100%);
            transition: transform 0.3s ease;
            z-index: 1000;
        }

            .sidebar.open {
                transform: translateX(0);
            }

            .sidebar a {
                color: #fff;
                display: block;
                padding: 12px 20px;
                text-decoration: none;
                transition: 0.3s;
            }

                .sidebar a:hover, .sidebar a.active {
                    background-color: rgba(255,255,255,0.1);
                    border-radius: 5px;
                }

        /* Header */
        .header {
            height: 60px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: rgba(0,0,0,0.85);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            z-index: 1100;
        }

            .header h5 {
                margin: 0;
                font-weight: bold;
                color: white;
                letter-spacing: 1px;
            }

        .header-nav {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex: 1;
        }

            .header-nav a {
                color: #fff;
                text-decoration: none;
                font-weight: 500;
            }

                .header-nav a.active {
                    text-decoration: underline;
                }

        /* Content */
        .content {
            flex: 1;
            margin-top: 60px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

        /* Footer */
        .footer {
            background: rgba(0,0,0,0.85);
            color: #fff;
            text-align: center;
            padding: 10px 0;
        }

        .toggle-sidebar-btn {
            font-size: 1.5rem;
            cursor: pointer;
        }

        /* Animations for sidebar links */
        .sidebar a {
            transform: translateX(-10px);
            opacity: 0;
            animation: fadeIn 0.3s forwards;
        }

        .sidebar.open a {
            animation: fadeIn 0.3s forwards;
        }
        @@keyframes fadeIn {
            to

        {
            transform: translateX(0);
            opacity: 1;
        }

        }

        /* Buttons */
        .btn-outline-light {
            border-color: #fff;
            color: #fff;
        }

            .btn-outline-light:hover {
                background: #fff;
                color: #000;
            }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
       
        <a asp-controller="Home" asp-action="Index">🏠 Home</a>
        <a asp-controller="AdminCategory" asp-action="Index" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCategory") ? "active" : "")">📂 Categories</a>
        <a asp-controller="AdminProduct" asp-action="Index" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "AdminProduct") ? "active" : "")">🍔 Products</a>
        <a asp-controller="AdminOrder" asp-action="Index" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "AdminOrder") ? "active" : "")">📝 Orders</a>
        <a asp-controller="AdminUser" asp-action="Index" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "AdminUser") ? "active" : "")">👤 Users</a>
        <a asp-controller="DailyProductOrders" asp-action="Index">📊 Count</a>
    </div>

    <!-- Header -->
    <div class="header">
        <div class="d-flex align-items-center">
            <span id="toggleSidebar" class="toggle-sidebar-btn me-3"><i class="bi bi-list"></i></span>
            <h5>Wessa Restaurant</h5>
        </div>
        <div class="header-nav">
            <a asp-controller="Home" asp-action="Index">🏠User Home</a>
            <a asp-controller="AdminCategory" asp-action="Index">📂 Categories</a>
            <a asp-controller="AdminProduct" asp-action="Index">🍔 Products</a>
            <a asp-controller="AdminOrder" asp-action="Index">📝 Orders</a>
            <a asp-controller="AdminUser" asp-action="Index">👤 Users</a>
        </div>
        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline ms-3">
            <button class="btn btn-outline-light btn-sm">Logout</button>
        </form>
    </div>

    <!-- Content -->
    <div id="content" class="content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <div class="footer">
        &copy; @DateTime.Now.Year - Wessa Admin Dashboard
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const toggleBtn = document.getElementById('toggleSidebar');
        const sidebar = document.getElementById('sidebar');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('open');
        });

        document.querySelectorAll('.sidebar a').forEach(link => {
            link.addEventListener('click', () => {
                sidebar.classList.remove('open');
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
