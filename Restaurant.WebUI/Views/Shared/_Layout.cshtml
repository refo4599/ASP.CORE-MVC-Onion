<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant.WebUI</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restaurant.WebUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Restaurant.WebUI</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Category" asp-action="Index">Category</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Product" asp-action="Index">Product</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Menu" asp-action="Index">Menu</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">Cart</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Menu" asp-action="Favourites">Favourites</a></li>
                    </ul>

                    <!-- 🛒 أيقونة الكارت -->
                   
                </div>
            </div>
        </nav>
    </header>

    <!-- 🧾 السلة الجانبية -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="cartSidebar" aria-labelledby="cartSidebarLabel">
        <div class="offcanvas-header">
            <h5 id="cartSidebarLabel"><i class="bi bi-cart-check"></i> Your Cart</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body">
            <div id="cart-items">
                <p class="text-muted text-center">Your cart is empty.</p>
            </div>

            <hr />

            <div class="d-flex justify-content-between">
                <strong>Total:</strong>
                <span id="cart-total">$0.00</span>
            </div>

            <div class="mt-3 text-center">
                <a asp-controller="Cart" asp-action="Index" class="btn btn-success w-100">Go to Checkout</a>
            </div>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - Restaurant.WebUI - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // 🔹 كود بسيط لتحديث الكارت من localStorage
        document.addEventListener("DOMContentLoaded", function () {
            const cartCount = document.getElementById("cart-count");
            const cartItemsContainer = document.getElementById("cart-items");
            const cartTotal = document.getElementById("cart-total");

            let cart = JSON.parse(localStorage.getItem("cart")) || [];

            function updateCartDisplay() {
                cartCount.textContent = cart.length;
                if (cart.length === 0) {
                    cartItemsContainer.innerHTML = '<p class="text-muted text-center">Your cart is empty.</p>';
                    cartTotal.textContent = "$0.00";
                    return;
                }

                cartItemsContainer.innerHTML = "";
                let total = 0;
                cart.forEach(item => {
                    total += item.price * item.quantity;
                    cartItemsContainer.innerHTML += `
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <strong>${item.name}</strong><br />
                                <small>${item.quantity} × $${item.price}</small>
                            </div>
                            <span class="text-success fw-bold">$${(item.price * item.quantity).toFixed(2)}</span>
                        </div>`;
                });
                cartTotal.textContent = "$" + total.toFixed(2);
            }

            updateCartDisplay();
        });
    </script>



    

    @if (TempData["ToastMessage"] != null)
    {
        // filtter Name ToastMessage
        <div id="toast" class="toast-message">
            @TempData["ToastMessage"]
        </div>

        <style>
            .toast-message {
                position: fixed;
                top: 20px;
                right: 20px;
                background: #ff4444;
                color: white;
                padding: 12px 20px;
                border-radius: 6px;
                box-shadow: 0 4px 10px rgba(0,0,0,0.2);
                font-weight: bold;
                animation: fadeInOut 2.5s ease-in-out forwards;
                z-index: 9999;
            }

            @@keyframes fadeInOut {
                0% {
                    opacity: 0;
                    transform: translateY(-10px);
                }

                10% {
                    opacity: 1;
                    transform: translateY(0);
                }

                90% {
                    opacity: 1;
                    transform: translateY(0);
                }

                100% {
                    opacity: 0;
                    transform: translateY(-10px);
                }
            }
        </style>
    }



</body>
</html>
