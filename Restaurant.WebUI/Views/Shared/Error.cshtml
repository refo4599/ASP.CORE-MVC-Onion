@model string

@{
    ViewData["Title"] = "Error";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 500px;">
        <div class="card-body text-center p-5">
            <div class="mb-4">
                <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 4rem;"></i>
            </div>
            <h3 class="fw-bold text-danger mb-3">Oops! Something went wrong</h3>

            @if (!string.IsNullOrEmpty(Model))
            {
                <p class="text-muted mb-4">@Model</p>
            }
            else
            {
                <p class="text-muted mb-4">An unexpected error occurred. Please try again later.</p>
            }

            <a href="javascript:history.back()" class="btn btn-outline-primary rounded-pill px-4">
                <i class="bi bi-arrow-left-circle me-2"></i> Go Back
            </a>
        </div>
    </div>
</div>
