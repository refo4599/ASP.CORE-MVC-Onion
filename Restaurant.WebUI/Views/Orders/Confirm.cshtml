@model Restaurant.Models.Order

<div class="container py-4">
    <h2 class="text-primary fw-bold mb-4">🧾 Confirm Your Order</h2>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="fw-bold text-secondary mb-3">Order Summary</h5>

            <table class="table table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Product?.Name</td>
                            <td>@item.Quantity</td>
                            <td>$@item.Price.ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
            </table>

            <h4 class="text-end text-success fw-bold mt-3">
                Total: $@Model.TotalPrice.ToString("0.00")
            </h4>
        </div>
    </div>

    <form asp-action="ConfirmOrder" method="post" class="mb-3">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label fw-bold">Select Order Type</label>
            <select name="orderType" class="form-select" required>
                <option value="">-- Choose an option --</option>
                <option value="Delivery">Delivery 🚚</option>
                <option value="TakeAway">Take Away 🥡</option>
                <option value="DineIn">Dine In 🍽️</option>
            </select>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success flex-grow-1">
                ✅ Confirm Order
            </button>

            <form asp-action="CancelOrder" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-outline-danger flex-grow-1">
                    ❌ Cancel Order
                </button>
            </form>
        </div>
    </form>
</div>
